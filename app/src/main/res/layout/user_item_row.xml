<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginBottom="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civUserItemPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:civ_border_width="2dp"
            app:civ_border_color="#000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserItemFirstname" app:layout_constraintStart_toEndOf="@+id/civUserItemPhoto"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/civUserItemPhoto" android:textSize="18sp" android:textStyle="bold"
            android:text="Name"/>
    <TextView
            android:layout_height="wrap_content"
            android:id="@+id/tvUserItemLastname"
            app:layout_constraintStart_toEndOf="@+id/tvUserItemFirstname" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/civUserItemPhoto"
            android:textSize="18sp"
            android:textStyle="bold" android:layout_width="wrap_content" android:text="Surname"/>
</android.support.constraint.ConstraintLayout>