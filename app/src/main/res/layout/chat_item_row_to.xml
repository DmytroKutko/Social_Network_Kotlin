<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civChatItemPhotoTo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvChatItemMessageTo" app:layout_constraintEnd_toStartOf="@+id/civChatItemPhotoTo"
            android:background="@drawable/rounded_message"
            android:paddingTop="8dp" android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/civChatItemPhotoTo"
            app:layout_constraintBottom_toBottomOf="@+id/civChatItemPhotoTo" android:paddingLeft="8dp"
            android:paddingRight="8dp" android:layout_marginEnd="12dp" android:textSize="18sp"
            app:layout_constraintVertical_bias="1.0"
    />
</android.support.constraint.ConstraintLayout>